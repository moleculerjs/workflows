{
  "name": "@moleculer/workflows",
  "version": "0.0.0",
  "description": "Advanced Workflow feature for Moleculer microservices framework",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon examples/index.js",
    "ci:unit": "jest --testMatch \"**/unit/**/*.spec.js\" --watch",
    "ci:integration": "jest --testMatch \"**/integration/**/*.spec.js\" --runInBand --watch",
    "ci:leak": "jest --testMatch \"**/leak-detection/**/index.spec.js\" --runInBand --watch",
    "test:unit": "jest --testMatch \"**/unit/**/*.spec.js\" --force-exit",
    "test:integration": "jest --testMatch \"**/integration/**/*.spec.js\" --runInBand --coverage --force-exit",
    "test:leak": "jest --testMatch \"**/leak-detection/**/*.spec.js\" --runInBand --force-exit",
    "test": "jest --testMatch \"**/*.spec.js\" --runInBand --coverage --force-exit",
    "lint": "eslint --ext=.js src examples test",
    "bench": "node benchmark/index.js",
    "bench:watch": "nodemon benchmark/index.js",
    "deps": "ncu -i && npm audit fix",
    "ci-update-deps": "ncu -u --target minor",
    "coverall": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "release": "npm publish --access public && git push --tags"
  },
  "keywords": [
    "workflow",
    "moleculer",
    "microservice"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/moleculerjs/workflows.git"
  },
  "author": "MoleculerJS",
  "license": "MIT",
  "peerDependencies": {
    "moleculer": "^0.14.12 || ^0.15.0-0"
  },
  "devDependencies": {
    "axios": "^1.9.0",
    "benchmarkify": "^4.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-security": "^2.1.1",
    "fakerator": "^0.3.6",
    "globby": "^14.1.0",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "kleur": "^4.1.5",
    "moleculer": "^0.14.35",
    "moleculer-repl": "^0.7.4",
    "moleculer-web": "^0.10.8",
    "nodemon": "^3.1.10",
    "npm-check-updates": "^18.0.1",
    "prettier": "^3.5.3"
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": "./src",
    "roots": [
      "../test"
    ],
    "coverageDirectory": "../coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/services/"
    ]
  },
  "engines": {
    "node": ">= 20.x.x"
  },
  "dependencies": {
    "cron-parser": "^5.1.1",
    "fastest-validator": "^1.19.1",
    "ioredis": "^5.6.1",
    "lodash": "^4.17.21"
  }
}
