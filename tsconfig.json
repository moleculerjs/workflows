{
	"compilerOptions": {
		"allowJs": true,
		"strict": false,
		"checkJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2023"],
		"module": "node16",
		"moduleResolution": "node16",
		"target": "es2022",

		"declaration": false,
		"outDir": "dist",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"rewriteRelativeImportExtensions": true,
		"isolatedModules": true,
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", ".eslintrc.js", "prettier.config.js", "dist"],
}
