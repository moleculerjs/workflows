{
	"compilerOptions": {
		"allowJs": true,
		"strict": false,
		"checkJs": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ESNext", "ESNext.Promise"],
		"declaration": true,
		"declarationDir": "types",
		"outDir": "dist",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		//"allowImportingTsExtensions": true
		"rewriteRelativeImportExtensions": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", ".eslintrc.js", "prettier.config.js", "dist"]
}
