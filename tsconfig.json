{
	"compilerOptions": {
		"allowJs": true,
		"strict": false,
		"checkJs": true,
		"skipLibCheck": true,
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"declaration": true,
		"declarationDir": "types",
		"outDir": "dist",
		"target": "ES2023",
		"lib": ["es2023"],
		"esModuleInterop": true
	},
	"include": ["**.js"],
	"exclude": ["node_modules", ".eslintrc.js", "prettier.config.js", "dist"]
}
